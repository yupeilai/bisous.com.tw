#container
  width 100%
  height auto

.default-layout
  min-height 100vh
  margin-top 100px + 32px + 20px
  margin-bottom 120px

  h1
    font-size 35px
    line-height 40px
    font-family serif
    margin-bottom 32px
    &.underline
     display block
     border-bottom 1px solid $color-gray
    small
      margin-left 10px
      font-size 20px

  h3
    font-size 24px
    line-height 35px
    font-family serif
    margin-bottom 16px
    &.underline
     display block
     border-bottom 1px solid $color-gray


.wrapper
  width 100%
  max-width 1080px
  margin auto
  position relative
