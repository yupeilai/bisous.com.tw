.generator-wrapper
  #generator_preview
    position relative

    +below(___)
      display block
      line-height 0
      .preview-area
        display block

    .preview-area
      +below(___)
        padding 16px
      .preview-area-wrapper
        position relative
        width 100%
        height 100%
        display flex
        flex-flow column
      img
        display flex
        max-width 100%
        max-height 100%
        margin 0 auto
        // +below(____)
        //   max-height 70vh

      .loading
        width calc(100% + 96px)
        height calc(100% + 96px)
        top -48px
        left -48px
        position absolute
        display flex
        justify-content center
        align-items center
        background rgba(0, 0, 0, .5)
        opacity 0
        z-index 100
        transition opacity .25s ease-in-out
        &.on
          opacity 1
        .spinner
          & > div
            width 18px
            height 18px
            margin 0 3px
            background-color $color-black
        +below(___)
          width calc(100% + 48px)
          height calc(100% + 48px)
          top -24px
          left -24px

  #output_container
    width auto
    height auto
    display flex
    align-items left
    overflow hidden
    position relative

    .text-wrapper
      position absolute
      top 0
      left 0
      right 0
      bottom 0

  .template-select-list
    display flex
    flex-wrap wrap
    margin -4px
    +below(____)
      display flex
      flex-wrap nowrap
      overflow-x auto
      -webkit-overflow-scrolling touch
      -ms-overflow-style -ms-autohiding-scrollbar
      padding-bottom 8px
      label
        flex 0 0 auto
        width calc(30% - 8px)!important

    label
      position relative
      width calc(25% - 16px)
      margin 4px
      height auto
      background-size cover
      background-position center
      background-color $color-white
      background-repeat no-repeat
      border 4px solid $color-gray
      transition border .5s
      block-shadow()

      +below(____)
        max-width 160px

      &.active
        border 4px solid $color-black

      &:before
        content: ''
        display block
        padding-top 100%

      .image-item
        width 100%
        height 100%
        position absolute
        top 0
        left 0
        background-size contain
        background-position center
        background-repeat no-repeat
        cursor pointer

      input[type=radio]
        position absolute
        top 0
        left 0
        opacity 0
