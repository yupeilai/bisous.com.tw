.generator-wrapper
  #generator_preview
    position relative

    +below(___)
      display block
      line-height 0
      .preview-area
        display block

    .preview-area
      +below(___)
        padding 16px
      .preview-area-wrapper
        position relative
        width 100%
        height 100%
        display flex
        flex-flow column
      img
        display flex
        max-width 100%
        max-height 100%
        margin auto
        // +below(____)
        //   max-height 70vh

      .loading
        width calc(100% + 96px)
        height calc(100% + 96px)
        top -48px
        left -48px
        position absolute
        display flex
        justify-content center
        align-items center
        background rgba(0, 0, 0, .5)
        opacity 0
        z-index 100
        transition opacity .25s ease-in-out
        &.on
          opacity 1
        .spinner
          & > div
            width 18px
            height 18px
            margin 0 3px
            background-color $color-black
        +below(___)
          width calc(100% + 48px)
          height calc(100% + 48px)
          top -24px
          left -24px

  #output_container
    width auto
    height auto
    display flex
    align-items left
    overflow hidden
    position relative

    .text-wrapper
      position absolute
      top 0
      left 0
      right 0
      bottom 0

    .mate_1
    .mate_2
      width 100%
      font-size 72px
      line-height 1
      font-family 'Ramland', sans-serif
