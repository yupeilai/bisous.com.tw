#home-themes
  min-height 100vh
  margin-bottom 100px

  .title
    margin-top 80px
    font-size 35px
    font-family serif

  .themes-list
    list-style none
    margin -16px
    padding 0
    display flex
    flex-wrap wrap
    align-items stretch

    .list-item
      list-style none
      width calc(100% / 3 - 32px)
      margin 16px
      display flex
      align-items stretch

      .item-wrapper
        width 100%

      .theme-title
        font-size 18px
        small
          font-size 16px
          font-weight normal
          display block

      .theme-image
        width 100%
        height 0
        padding-top 60%
        background-size cover
        background-repeat no-repeat
        background-position center center
        border-radius 5px
