.card-list
  list-style none
  margin -16px
  padding 0
  display flex
  flex-wrap wrap
  align-items stretch

  .list-item
    list-style none
    width calc(100% / 3 - 32px)
    margin 16px
    display flex
    align-items stretch
    cursor pointer

    .item-wrapper
      width 100%

    .card-title
      font-size 18px

    .card-image
      width 100%
      height 0
      padding-top 60%
      background-size cover
      background-repeat no-repeat
      background-position center center
      border-radius 5px
