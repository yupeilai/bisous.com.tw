@keyframes bouncedelay
  0%, 80%, 100%
    transform scale(0)
  40%
    transform scale(1.0)

.page-loading
  position fixed
  left 0
  top 0
  z-index -1
  display flex
  justify-content center
  align-items center
  width 100%
  height 100%
  background-color #F8F7F3
  transition all .3s linear
  opacity 0
  &.show
    opacity 1
    z-index 1000001

.spinner
  margin 0 auto
  width 90px
  text-align center
  & > div
    width 18px
    height 18px
    margin 0 3px
    background-color #104664
    border-radius 100%
    display inline-block
    animation bouncedelay 1.4s infinite ease-in-out both
  .bounce1
    animation-delay -0.32s
  .bounce2
    animation-delay -0.16s
