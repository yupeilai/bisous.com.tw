$header-height = 100px
$header-height-sticky = 60px

#header
  padding 16px 0
  position fixed
  left 0
  right 0
  top 0
  width 100%
  z-index 9999
  transition all .3s linear

  .wrapper
    display flex

  &.sticky
    height $header-height-sticky
    padding 8px 0
    margin 0
    background-color #EAEBED
    #header-brand a
      width 197px
      height $header-height-sticky
      background-image url('/images/logo-h.png') !important
    #header-nav li > a
    #header-cart a
      color $global-text-color !important
    #header-nav li > a:after
      background $global-text-color !important

  #header-brand
    display block
    flex 1
    display flex
    justify-content flex-start
    align-items center
    a
      height $header-height
      width $header-height
      background-image url('/images/logo.png')
      background-repeat no-repeat
      background-position center center
      background-size contain
      transition height .1s linear
      .home &
        background-image url('/images/logo-white.png')

  #header-nav
    list-style none
    padding 0
    margin 0
    display flex
    align-items center
    justify-content center
    > ul
      margin 0
      padding 0
      > li
        position relative
        list-style none
        display inline-block
        padding 10px 40px
        &:hover .sub-nav
          left 50%
        &:first-child
          margin-left 0
        &:last-child
          margin-right 0
        > a
          position relative
          font-size 14px
          &:hover:after
            width 100%
          &:after
            background $global-text-color
            bottom -2px
            content ""
            height 3px
            left 0
            position absolute
            transition width .5s
            width 0
    .sub-nav
      position absolute
      top calc(100% - 5px)
      // left 50%
      left -9999%
      background $color-gray-light
      transform translateX(-50%)
      border-radius 5px
      margin 0
      padding 10px 0
      list-style none
      z-index 99999
      &:after
        border-color transparent transparent #f9f9f9
        border-style solid
        border-width 0 6px 6px
        content ""
        display block
        height 0
        left 50%
        position absolute
        top -6px
        transform translateX(-50%)
        width 0
        z-index 100000

      li
        display block
        line-height 1
        margin 0
        padding 0
        width 200px
        text-align center
        a
          display block
          padding 10px 0
          color $global-text-color !important

    .home &
      li > a
        color #FFFFFF
        &:after
          background #FFFFFF

  #header-cart
    flex 1
    display flex
    justify-content flex-end
    align-items center
    .home &
      a
        color #FFFFFF
        font-size 14px
