$output-debug = true
$output-debug = false

#generator_container
  position relative
  display flex
  align-items stretch
  margin 0 auto
  width auto

  +below(___)
    display block

  #generator_preview
    overflow hidden
    flex 2
    display flex
    flex-direction column

    +below(___)
      flex 0
      border-radius 0

  .preview-area
    flex 1
    display flex
    align-items center
    justify-content center
    position relative

    +below(___)
      flex 0

  #output_container
    position fixed
    z-index 1999999
    if $output-debug
      top 0
      left 0
      zoom 1
    else
      top -1000%
      left -1000%


  #generator_form
    flex 1
    display flex
    flex-direction column
    position relative
    max-width 400px
    +below(___)
      min-width 40vw
    +below(___)
      max-width 100vw

    .form-group:first-child
      h3
        margin-top 8px

    .fields-column-2 h3
      margin-top 16px !important

    .form-input
      flex 1
      overflow-y auto
      padding 16px
      padding-top 0
      h3
        font-size 18px
        margin-bottom 8px

@-moz-document url-prefix()
  #generator_container
    max-height 100%
