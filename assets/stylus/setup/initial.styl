html
  height 100%

body
  width 100%
  height 100%
  min-width 300px
  -webkit-text-size-adjust 100%
  -webkit-font-smoothing antialiased
  text-rendering optimizeLegibility
  font-family "Helvetica Neue", Helvetica, Arial, "STHeiti", "微軟正黑體", "Microsoft Yahei", sans-serif
  font-size $global-font-size
  line-height $global-lineheight
  color $global-text-color
  background $global-background
  &.lock-scroll
    overflow hidden
    position fixed

a
  color: $link-color
  text-decoration: none
  &:hover
    color: $link-hover-color
  &:active
    color: $link-active-color
  &:visited
    color: $link-visited-color

input[type=text]
input[type=email]
textarea
  position relative
  width 100%
  padding 10px 15px
  font-size 1.2rem
  outline none
  box-sizing border-box
  transition border .3s
  border 0
  background $color-white
  border 2px solid $color-gray
  -webkit-appearance none
  &:focus
    border-color $color-bisous-blue
  &.half-size
    width 50%
  &.is-danger
    border-color $color-red
  & + input[type=text]
  & + input[type=email]
  & + textarea
    margin-top 16px

input[type=text]
input[type=email]
  border-radius 8888px

textarea
  border-radius 20px
  height 100px
  resize none

button::-moz-focus-inner
  border 0

button:focus
  outline none

#page
  height 100%
